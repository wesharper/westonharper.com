---
import HeaderLink from "./HeaderLink.astro";

export interface Props {
  headerClass?: string;
}

const { headerClass } = Astro.props;
---

<header
  class={`sticky top-0 left-0 right-0 flex justify-end gap-x-5 px-12 py-6 bg-slate-900 bg-opacity-70 ${
    headerClass ?? ""
  }`}
>
  <nav class="flex gap-x-5 text-slate-800 dark:text-slate-200">
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
  </nav>
</header>
