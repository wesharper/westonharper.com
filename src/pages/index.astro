---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

type Props = {
  title?: string;
  description?: string;
};

const { title, description } = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <BaseHead
      title={title ?? SITE_TITLE}
      description={description ?? SITE_DESCRIPTION}
    />
  </head>
  <body
    class="h-screen animate-bg-cycle-br bg-slate-200 bg-gradient-to-br from-violet-600 via-fuchsia-600 to-violet-600 bg-[length:800%_800%] antialiased dark:bg-slate-900"
  >
    <Header headerClass="!bg-opacity-0 !text-slate-50" />
    <main class="py-10 px-20">
      <section
        class="prose prose-invert mx-auto max-w-6xl text-slate-50 2xl:max-w-7xl"
      >
        <p class="text-3xl font-bold sm:text-4xl md:text-5xl 2xl:text-6xl">
          Hi, my name is Wes, I'm a software engineer, entrepreneur, and startup
          consultant. If you want to read my thoughts about startups, work,
          tech, and other things I have no business weighing in on, head over to
          my <a href="/blog">blog</a>.
        </p>
        <p class="text-sm sm:text-lg md:text-2xl 2xl:text-3xl">
          Think I'd be a good fit for your team? <a
            href="mailto:hello@westonharper.com?subject=Work Inquiry">Hire me</a
          >!
        </p>
      </section>
    </main>
  </body>
</html>
